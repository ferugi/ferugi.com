article
    margin: 6vh auto
    max-width: 32em

    header, footer, .entry
        line-height: 1.6
        max-width: 32em

    h2
        margin-top: 2em
        
    header
        h1
            font-weight: bold
            color: $text
            margin: 0
            border-bottom: 2px solid #ccc

        time
            font-weight: 300

    .icon
        width: 5em
        height: 5em
        margin: auto
        color: $feature
        border-radius: 10px
        float: left
        margin-left: -6em
        position: absolute

        i
            margin: 0.15em 0 0 0.2em
            font-size: 4em

#comments
    margin: auto
    max-width: 32em

// Article Min-Width
@media only screen and (max-width: 46em)
    article
        .icon
            display: none