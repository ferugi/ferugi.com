*
    font-family: 'Open Sans', 'sans-serif'

html
    height: 100%
    width: 100%

body
    min-height: 100%
    min-width: 100%
    padding: 0
    margin: 0
    border: 0
    background: colour-light
    vertical-align: baseline;
    color: colour-dark

p
    font-size: 0.875em

h1
    font-size: 1.2em
    font-weight: 600
    
    &.title
        text-align: center
        font-weight: bold
        font-family: 'Nunito Sans', sans-serif;

h2
    font-size: 1em
    font-weight: bold

a
    font-weight: bold
    text-decoration: none
    color: colour-blue

    &:hover
        text-decoration: underline

    &:visited
        color: colour-blue

code
    font-family: monospace
    display: inline-block
    background: rgba(0,0,0,0.1)
    border-radius: 2px
    padding: 0.2em 0.35em
    word-break: break-all

input
    text-shadow: 0px
    border-radius: 5px
    border: solid 1px #ccc
    padding: 5px

    &:focus
        border-radius: 10px
img
    max-height: 100%
    max-width: 100%

.site-footer
    text-align: center
    font-size: 70%
.main-nav
    text-align: center
    width: 100%

    a
        margin: 1em

#articles
    padding: 1em

main
    width: auto
    transition: 0.25s
    overflow: hidden

#sidebar
    background: colour-blue url(bio-background-url) top center no-repeat
    transition: width 0.25s
    color: colour-light
    overflow: hidden
    background-size: auto 100%
    height: 100vh
    width: 100%
    text-shadow: 0em 0em 0.5em colour-dark
    
    .bio
        width: 30em
        margin: 70vh auto auto auto
        text-align: center
        font-size: 2vh
        transition: font-size 0.1s

        a
            text-decoration: none
            color: colour-light

        h1, h2
            margin: 0
        h1
            font-size: 4em
        h2
            font-size: 1.2em

        .socialmedia
            display: flex
            margin: 1em 5em
            justify-content: space-around
            
        i
            font-size: 2em
            transition: font-size 0.1s

            &:hover
                font-size 2.5em

.clearfix
    clear: both

.button, .button:visited
    background: colour-blue
    color: colour-light
    padding: 0.3em 0.6em
    border-radius: 0.25em
    font-size: 0.875em
    transition: padding 0.2s

    &:hover
        text-decoration: none
        padding: 0.4em 0.7em


// Media Rules

// Large / Desktop / High Res Landscape
@media only screen and (min-aspect-ratio: 12/10) and (min-width: 1000px)
    #sidebar
        position: fixed
        float: left
        width: 50%
        height: 100%
    
        .bio
            font-size: 1vw

    main
        margin-left: 50%;

// Small / Mobile / Low Res Portrait
@media only screen and (max-aspect-ratio: 12/10)
    #sidebar
        height: 100vh
        width: 100%

// Extreme Portait
@media only screen and (max-aspect-ratio: 8/13)
    #sidebar
        .bio
            font-size: 3vw

// Extreme Portait
@media only screen and (min-aspect-ratio: 13/8) and (max-width: 999px)
    #sidebar
        .bio
            margin: 10vh 2em
            font-size: 1.3vw

            h2
                display: none