<% switch (theme.comments.using) {
      case "disqus": %>
        <div id="disqus_thread"></div>

        <script>
        var disqus_config = function () {
        this.page.url = "<% if (disquscommenturl) { %><%- disquscommenturl %><% } else { %><%- url.replace(/index\.html$/, '') %><% } %>"
        this.page.identifier = "<% if (disquscommentid) { %><%- disquscommentid %><% } else { %><%- path %><% } %>"
        };

        (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = '//ferugi.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<%     break;
      case "facebook": %>
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.8&appId=<%- theme.comments.facebook.appId %>";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="fb-comments" data-href="<% if (fbcommentlink) { %><%- fbcommentlink %><% } else { %><%- url.replace(/index\.html$/, '') %><% } %>" data-width="<%- theme.comments.facebook.width %>" data-numposts="<%- theme.comments.facebook.count %>" data-colorscheme="<%- theme.comments.facebook.colorscheme %>"></div>
<%      break;
} %>