<article class="bio">
  <div>
    <div clas="portrait">
      <img src="<%- item.portrait %>"/>
    </div>
    <header>
      <%- partial('post/title') %>
    </header>
    <div>
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
  </div>
</article>